<fieldset class="col-md-offset-2 col-md-8">
    <legend>{{form.title}}</legend>
    <form class="form-horizontal" action="{{form.action}}" method="{{form.method}}">
    {{#each form.fields as |f|}}
        {{#if (is-equal f.type "email")}}
            <div class="form-group">
                <label for="{{f.id}}" class="col-md-2 control-label">{{f.label}}</label>
                <div class="col-md-5">
                    <input type="email" class="form-control" id="{{f.id}}" placeholder="{{f.placeholder}}">
                </div>
            </div>
        {{else if (is-equal f.type "password")}}
            <div class="form-group">
                <label for="{{f.id}}" class="col-md-2 control-label">{{f.label}}</label>
                <div class="col-md-6">
                    <input type="password" class="form-control" id="{{f.id}}" placeholder="{{f.placeholder}}">
                </div>
            </div>
        {{/if}}
    {{/each}}
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            {{#each form.buttons as |b|}}
                {{#if (is-equal b.type "submit")}}
                    <button type="submit" class="btn btn-primary">{{t "buttons.submit"}}</button>
                {{else if (is-equal b.type "reset")}}
                    <button type="reset" class="btn btn-default">{{t "buttons.reset"}}</button>
                {{else}}
                    <button class="btn btn-{{f.style}}">{{f.label}}</button>
                {{/if}}
                &nbsp;
            {{/each}}
        </div>
    </div>
    </form>
</fieldset>
